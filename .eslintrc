{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": ["standard", "prettier"],
  "plugins": ["prettier"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 9
  },
  "rules": {
    "prettier/prettier": "error",
    "no-console": ["error", { "allow": ["warn", "error"] }]
  },
  "overrides": [
    {
      "files": ["./test/**"],
      "env": {
        "mocha": true
      }
    }
  ]
}
